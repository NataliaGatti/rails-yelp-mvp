<div class="container">
    <h1 class="text-center"><%= @restaurant.name %></h1>
    <ul>
        <h2>MÃ¡s detalles del restaurant</h2>
        <li><h4>Address: <%= @restaurant.address %></h4></li>
        <li><h4>Phone Number: <%= @restaurant.phone_number %></h4></li>
        <li><h4>Category: <%= @restaurant.category %></h4></li>
    </ul>
</div>

<div class="container">
    <h2>Create your review</h2>
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.input :rating, as: :integer %>
    <%= f.input :content, as: :text %>
    <%= f.submit class:"btn btn-success" %>
  <% end %>
</div>

<div class="container mt-3">
    <ul>
    <% @restaurant.reviews.each do |review| %>
    <li><h5>Rating: <%= "*" * review.rating %></h5>
    <h3><%= review.content %></h3></li>
    <% end %>
    </ul>
</div>
